{
  "name": "3-sides-of-triangle",
  "version": "1.0.0",
  "description": "Triangle calculator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/Piotersky/3ST/tree/main",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.piotersky.3st",
    "productName": "Triangle calculator",
    "win": {
      "target": "nsis",
      "icon": "screens/main/img/install.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "screens/main/img/install.ico",
      "uninstallerIcon": "screens/main/img/install.ico",
      "license": "license.txt",
      "shortcutName": "3ST"
    },
    "directories": {
      "output": "dist"
    }
  },
  "author": "Piotersky",
  "license": "",
  "devDependencies": {
    "electron": "^19.0.9",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "electron-root-path": "^1.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0"
  }
}
